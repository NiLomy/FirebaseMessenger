<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Прямоугольник -->
    <item android:right="4dp">
        <shape>
            <solid android:color="@color/colorItemRight"/>
            <corners android:bottomRightRadius="0dp" android:topRightRadius="15dp" android:bottomLeftRadius="15dp" android:topLeftRadius="15dp"/>
        </shape>
    </item>

    <!-- Треугольник -->
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="100%"
            android:pivotY="100%" >
            <shape android:shape="rectangle">
                <solid android:color="@color/colorItemRight" /> <!-- Цвет треугольника -->
            </shape>
        </rotate>
    </item>
</layer-list>