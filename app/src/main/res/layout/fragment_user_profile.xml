<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorGreen"
        android:elevation="@dimen/cardview_default_elevation"
        android:fontFamily="@font/roboto_black"
        android:paddingStart="32dp"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        android:text="@string/profile"
        android:textColor="@color/colorWhite"
        android:textSize="27sp"
        android:translationZ="@dimen/cardview_compat_inset_shadow"
        app:layout_constraintBottom_toTopOf="@id/iv_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="5dp"
        android:fontFamily="@font/roboto_bold"
        android:paddingStart="16dp"
        android:shadowColor="@color/colorText"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="@string/name"
        android:textColor="@color/colorWhite"
        android:textSize="28dp"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="User" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ib_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/custom_button_3"
        android:backgroundTint="@color/colorWhite"
        android:drawableStart="@drawable/mail_black"
        android:drawablePadding="16dp"
        android:elevation="2dp"
        android:padding="10dp"
        android:shadowColor="@color/colorText"
        android:text="chat"
        android:translationZ="2dp"
        app:layout_constraintStart_toEndOf="@id/ib_friend"
        app:layout_constraintTop_toBottomOf="@+id/iv_image" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_friend"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_button_3"
        android:backgroundTint="@color/colorWhite"
        android:elevation="1dp"
        android:padding="16dp"
        android:shadowColor="@color/colorText"
        android:translationZ="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_image"
        app:srcCompat="@drawable/add_friend" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>