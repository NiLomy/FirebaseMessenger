<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/signUpFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="ru.kpfu.itis.android.team22.firebasemessenger.fragments.SignUpFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/nav_from_signup_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/nav_from_signup_to_container"
            app:destination="@id/containerFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.kpfu.itis.android.team22.firebasemessenger.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/nav_from_login_to_signup"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/nav_from_login_to_container"
            app:destination="@id/containerFragment" />
    </fragment>
    <fragment
        android:id="@+id/containerFragment"
        android:name="ru.kpfu.itis.android.team22.firebasemessenger.fragments.ContainerFragment"
        android:label="ContainerFragment"
        tools:layout="@layout/fragment_container">
        <action
            android:id="@+id/nav_from_container_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/nav_from_container_to_chat"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/nav_from_container_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/nav_from_container_to_friends_list"
            app:destination="@id/friendsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="ru.kpfu.itis.android.team22.firebasemessenger.fragments.ChatFragment"
        android:label="ChatFragment"
        tools:layout="@layout/fragment_chat">
        <action
            android:id="@+id/nav_from_chat_to_container"
            app:destination="@id/containerFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.kpfu.itis.android.team22.firebasemessenger.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/nav_from_settings_to_container"
            app:destination="@id/containerFragment" />
    </fragment>
    <fragment
        android:id="@+id/friendsListFragment"
        android:name="ru.kpfu.itis.android.team22.firebasemessenger.fragments.FriendsListFragment"
        android:label="FriendsListFragment"
        tools:layout="@layout/fragment_friends_list">
        <action
            android:id="@+id/nav_from_friends_list_to_container"
            app:destination="@id/containerFragment" />
        <action
            android:id="@+id/nav_from_friends_list_to_friends_searcher"
            app:destination="@id/friendsSearcherFragment" />
    </fragment>
    <fragment
        android:id="@+id/friendsSearcherFragment"
        android:name="ru.kpfu.itis.android.team22.firebasemessenger.fragments.FriendsSearcherFragment"
        android:label="FriendsSearcherFragment"
        tools:layout="@layout/fragment_friends_searcher">
        <action
            android:id="@+id/nav_from_friends_searcher_to_friends_list"
            app:destination="@id/friendsListFragment" />
    </fragment>

</navigation>